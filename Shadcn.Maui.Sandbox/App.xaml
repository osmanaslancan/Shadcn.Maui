<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Shadcn.Maui.Sandbox"
             xmlns:shadcn="clr-namespace:Shadcn.Maui.Resources;assembly=Shadcn.Maui"
             xmlns:controls="clr-namespace:Shadcn.Maui.Controls;assembly=Shadcn.Maui"
             x:Class="Shadcn.Maui.Sandbox.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--<ResourceDictionary Source="Resources/Styles/Colors.xaml" />-->
                <!--<ResourceDictionary Source="Resources/Styles/Styles.xaml" />-->
                <shadcn:StyleResource/>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="ContentPage" ApplyToDerivedTypes="True">
                <Setter Property="NavigationPage.HasNavigationBar" Value="False"/>
                <Setter Property="Shell.NavBarIsVisible" Value="False"/>
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource DarkBackground}}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
