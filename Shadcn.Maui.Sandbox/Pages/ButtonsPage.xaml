<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Shadcn.Maui.Sandbox.Pages.ButtonsPage"
             xmlns:shadcn="clr-namespace:Shadcn.Maui.Controls;assembly=Shadcn.Maui"
             Title="ButtonsPage">
    <FlexLayout Direction="Column" JustifyContent="Center" AlignItems="Center" BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource DarkBackground}}">
        <shadcn:SButton Variant="Primary" Text="Primary"/>
        <shadcn:SButton Variant="Secondary" Text="Secondary"/>
        <shadcn:SButton Variant="Destructive" Text="Destructive"/>
        <shadcn:SButton Variant="Outline" Text="Outline"/>
        <shadcn:SButton Variant="Ghost" Text="Ghost"/>
        <shadcn:SButton Variant="Primary" Text="Primary Disabled" IsEnabled="False"/>
    </FlexLayout>
</ContentPage>