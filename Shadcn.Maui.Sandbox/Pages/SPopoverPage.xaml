<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shadcn="clr-namespace:Shadcn.Maui.Controls;assembly=Shadcn.Maui"
             x:Class="Shadcn.Maui.Sandbox.Pages.SPopoverPage"
             Title="SPopoverPage">
    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <shadcn:SBorder x:Name="border" Padding="10">
            <HorizontalStackLayout Spacing="10">
                <shadcn:SLabel Text="Select framework..." FontFamily="GeistMedium"/>
                <shadcn:SIcon HeightRequest="20" WidthRequest="20" Icon="{StaticResource IconChevronsUpDown}"/>
            </HorizontalStackLayout>
        </shadcn:SBorder>
    </VerticalStackLayout>
</ContentPage>