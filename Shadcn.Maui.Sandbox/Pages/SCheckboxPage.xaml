<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shadcn="clr-namespace:Shadcn.Maui.Controls;assembly=Shadcn.Maui"
             x:Class="Shadcn.Maui.Sandbox.Pages.SCheckboxPage"
             Title="SCheckboxPage">
    <HorizontalStackLayout  HorizontalOptions="Center" VerticalOptions="Center">
        <shadcn:SCheckbox x:Name="checkbox"/>
        <shadcn:SLabel For="{Reference checkbox}" VerticalOptions="Center" FontFamily="GeistMedium">Accept terms and conditions</shadcn:SLabel>
    </HorizontalStackLayout>
</ContentPage>