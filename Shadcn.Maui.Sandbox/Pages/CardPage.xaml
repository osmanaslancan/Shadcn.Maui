<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shadcn="clr-namespace:Shadcn.Maui.Controls;assembly=Shadcn.Maui"
             x:Class="Shadcn.Maui.Sandbox.Pages.CardPage"
             Title="CardPage">
    <shadcn:SCard VerticalOptions="Center" HorizontalOptions="Center">
        <shadcn:SCardHeader>
            <shadcn:SCardTitle>
                <Label>Create project</Label>
            </shadcn:SCardTitle>
            <shadcn:SCardDescription>
                <Label>Deploy your new project in one-click.</Label>
            </shadcn:SCardDescription>
        </shadcn:SCardHeader>
        <VerticalStackLayout Padding="24,0,24,24">
            <Label Text="Name"/>
            <shadcn:SEntry />
            <Label Text="Framework"/>
            <shadcn:SEntry />
        </VerticalStackLayout>
        <shadcn:SCardFooter Direction="Row" JustifyContent="SpaceBetween">
            <shadcn:SButton Variant="Outline" Text="Cancel"/>
            <shadcn:SButton Variant="Primary" Text="Deploy"/>
        </shadcn:SCardFooter>
    </shadcn:SCard>
</ContentPage>