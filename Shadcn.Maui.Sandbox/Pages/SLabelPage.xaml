<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Shadcn.Maui.Sandbox.Pages.SLabelPage"
             xmlns:shadcn="clr-namespace:Shadcn.Maui.Controls;assembly=Shadcn.Maui"
             Title="SLabelPage">
    <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
        <shadcn:SLabel 
            For="{Reference entry}"
            VerticalOptions="Center"
            Text="Username: " />
        <shadcn:SEntry x:Name="entry" WidthRequest="250"/>
    </HorizontalStackLayout>
</ContentPage>