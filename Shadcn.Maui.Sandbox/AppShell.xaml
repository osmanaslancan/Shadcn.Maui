<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Shadcn.Maui.Sandbox.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Shadcn.Maui.Sandbox"
    xmlns:pages="clr-namespace:Shadcn.Maui.Sandbox.Pages"
    Title="Shadcn.Maui.Sandbox">
    <TabBar>
        <ShellContent Route="MainPage" Title="Welcome" ContentTemplate="{DataTemplate local:MainPage}"/>
        <ShellContent Route="ButtonsPage" Title="Buttons" ContentTemplate="{DataTemplate pages:ButtonsPage}"/>
        <ShellContent Route="TabsPage" Title="Tabs" ContentTemplate="{DataTemplate pages:TabsPage}"/>
        <ShellContent Route="CardPage" Title="Card" ContentTemplate="{DataTemplate pages:CardPage}"/>
    </TabBar>
</Shell>
